                        <!--EDIT PATIENT-->

                        <StackPanel Width="180" Margin="265,-50,0,0" HorizontalAlignment="Left">
                            <Button x:Name="editPatientButton" Content="EDIT PATIENT"
                                        FontSize="20"
                                        FontFamily="{StaticResource Rounded Elegance}"
                                        Foreground="White"
                                        Margin="-0,0,0,0"
                                        TextOptions.TextRenderingMode="Aliased"
                                        Click="editPatientButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#bd7e4a"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#a26838"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="180"
                                        Height="50"
                                        CornerRadius="30,30,30,30"
                                        Background="{TemplateBinding Background}">
